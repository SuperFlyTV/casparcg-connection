      "url": "http://balte.nl"
    },
    {
      "name": "Andreas Jeansson",
      "email": "andreas.jeansson@svt.se",
      "url": "http://svt.se"
    },
    {
      "name": "Aleksandr Besedin",
      "email": "sasha.besedin@gmail.com",
      "url": "http://cosmonova.net"
    }
  ],
  "homepage": "http://superfly.tv",
  "keywords": [
    "casparcg",
    "caspar",
    "caspercg",
    "amcp",
    "socket",
    "tcp",
    "broadcast",
    "graphics",
    "superfly",
    "connection",
    "middleware",
    "remote"
  ],
  "dependencies": {
    "highland": "^3.0.0-beta.6",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^9.0.7"
  },
  "devDependencies": {
    "@types/highland": "^2.10.7",
    "@types/jasmine": "^2.8.6",
    "@types/node": "^8.10.0",
    "@types/xml2js": "^0.4.2",
    "@types/xmlbuilder": "0.0.30",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-typedoc": "^2.2.0",
    "gulp-typescript": "^3.2.4",
    "gulp-watch": "^4.3.5",
    "gulp-zip": "^4.1.0",
    "jasmine-ts": "0.1.3",
    "rimraf": "^2.6.2",
    "standard-version": "^4.3.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^6.0.1",
    "typedoc": "^0.7.2",
    "typescript": "^2.7.2"
  }
}
