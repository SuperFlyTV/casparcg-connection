{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
	//	"noImplicitThis": true, conflict with jasmine, leave off until fixed
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es6",
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"tests",
		"tmp"
	]
}
